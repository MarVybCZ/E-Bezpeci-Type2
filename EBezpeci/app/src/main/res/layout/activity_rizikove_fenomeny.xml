<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadi_encyklopedie"
    tools:context=".RizikoveFenomeny">

    <ImageView
        android:id="@+id/kybersikana"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="kybersikana"
        android:src="@drawable/icon_kybersikana"
        android:onClick="kybersikanaClick"/>

    <ImageView
        android:contentDescription="kybergrooming"
        android:id="@+id/kybergrooming"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/kybersikana"
        android:layout_alignLeft="@+id/kybersikana"
        android:layout_marginTop="70dp"
        android:src="@drawable/icon_kybergrooming" />

    <ImageView
        android:contentDescription="sexting"
        android:id="@+id/sexting"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/kybersikana"
        android:layout_alignTop="@+id/kybergrooming"
        android:layout_marginTop="70dp"
        android:src="@drawable/icon_sexting" />

    <ImageView
        android:contentDescription="webcamtrolling"
        android:id="@+id/webcamtrolling"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/kybersikana"
        android:layout_alignLeft="@+id/kybersikana"
        android:layout_marginLeft="200dp"
        android:src="@drawable/icon_webcamtrolling" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/kybergrooming"
        android:layout_alignLeft="@+id/kybergrooming"
        android:layout_marginLeft="200dp"
        android:contentDescription="online výzvy"
        android:src="@drawable/icon_challenge" />

    <ImageView
        android:contentDescription="fake news"
        android:id="@+id/imageView3"
        android:layout_width="252dp"
        android:layout_height="72dp"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="159dp"
        android:src="@drawable/icon_fakenews" />

    <ImageView
        android:contentDescription="hoax"
        android:id="@+id/imageView4"
        android:layout_width="253dp"
        android:layout_height="63dp"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="77dp"
        android:src="@drawable/icon_hoax" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:height="20dp"
        android:onClick="zpetClick"
        android:text="Zpět" />

</RelativeLayout>